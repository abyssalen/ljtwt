<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="14.0" prefHeight="138.0" prefWidth="333.0" vgap="20.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" />
  </columnConstraints>
  <padding>
    <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
  </padding>
  <rowConstraints>
    <RowConstraints maxHeight="Infinity" minHeight="-Infinity" valignment="CENTER" vgrow="ALWAYS" />
      <RowConstraints maxHeight="Infinity" minHeight="10.0" prefHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
    <RowConstraints maxHeight="0.0" minHeight="-Infinity" prefHeight="0.0" vgrow="NEVER" />
  </rowConstraints>
   <children>
      <VBox prefHeight="93.0" prefWidth="305.0" spacing="15.0">
         <children>
            <HBox spacing="15.0">
               <children>
                  <TextField fx:id="fromDirectoryTextField" promptText="From Path" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#fromAction" text="From" />
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <TextField fx:id="toDirectoryTextField" promptText="To Path" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#toAction" text="To" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="305.0" GridPane.rowIndex="1">
         <children>
            <Button mnemonicParsing="false" onAction="#finishAction" text="Convert!" />
         </children>
      </HBox>
   </children>
</GridPane>
